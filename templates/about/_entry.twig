{% extends '_layouts/base' %}
{% block content %}
	{% set aboutus = craft.entries().section('about').one() %}
	{% for about in aboutus.pageBuilder.all() %}
		{% if about.type.handle == 'layoutAboutUs' %}
			<section class="bg-[#F8FAFC] mb-8">
				<div class="py-8 px-4 mx-auto max-w-screen-xl items-center lg:py-16 grid lg:grid-cols-2 gap-8 lg:gap-16">
					{% for item in about.about.all() %}
						{% if item.type.handle == 'inputImage' %}
							<div data-anijs="if: scroll, on: window, do: bounceInLeft animated, before: $scrollReveal">
								<img src="{{ item.bodyImage.one().url }}" alt="image">
							</div>
						{% endif %}
						{% if item.type.handle == 'inputText' %}
							<div class="flex flex-col justify-center" data-anijs="if: scroll, on: window, do: bounceInRight animated, before: $scrollReveal">
								{{ about.title | raw }}
								<div class="mb-8 text-lg font-normal text-gray-500 lg:text-xl space-y-2">
									{{ item.bodyEditor | raw }}
								</div>
							</div>
						{% endif %}
					{% endfor %}
				</div>
			</section>
			<section class="bg-[#F8FAFC] mb-8">
				<div class="py-8 px-4 mx-auto max-w-screen-xl items-center lg:py-16 grid lg:grid-cols-2 gap-8 lg:gap-16">
					{% for item in about.about2.all() %}
						{% if item.type.handle == 'inputText' %}
							<div class="flex flex-col justify-center md:order-1 order-2" data-anijs="if: scroll, on: window, do: bounceInLeft animated, before: $scrollReveal">
								<div class="mb-8 text-lg font-normal text-gray-500 lg:text-xl space-y-2">
									{{ item.bodyEditor }}
								</div>
							</div>
						{% endif %}
						{% if item.type.handle == 'inputImage' %}
							<div class="md:order-2 order-1" data-anijs="if: scroll, on: window, do: bounceInRight animated, before: $scrollReveal">
								<img src="{{ item.bodyImage.one().url }}" alt="image">
							</div>
						{% endif %}
					{% endfor %}
				</div>
			</section>
			<section class="bg-[#F8FAFC] mb-8">
				<div class="py-8 px-4 mx-auto max-w-screen-xl items-center lg:py-16 grid lg:grid-cols-2 gap-8 lg:gap-16">
					{% for item in about.about3.all() %}
						{% if item.type.handle == 'inputImage' %}
							<div data-anijs="if: scroll, on: window, do: bounceInLeft animated, before: $scrollReveal">
								<img src="{{ item.bodyImage.one().url }}" alt="image">
							</div>
						{% endif %}
						{% if item.type.handle == 'inputText' %}
							<div class="flex flex-col justify-center" data-anijs="if: scroll, on: window, do: bounceInRight animated, before: $scrollReveal">
								<div class="mb-8 text-lg font-normal text-gray-500 lg:text-xl space-y-2">
									{{ item.bodyEditor | raw }}
								</div>
							</div>
						{% endif %}
					{% endfor %}
				</div>
			</section>
		{% endif %}
		{% if about.type.handle == 'layoutPlatform' %}
			<section class="bg-[#F8FAFC] mb-8">
				<div class="py-8 px-4 mx-auto max-w-screen-xl" data-anijs="if: scroll, on: window, do: bounceInDown animated, before: $scrollReveal">
					{{ about.title | raw }}
				</div>
				<div class="pb-8 px-4 mx-auto max-w-screen-xl">
					<p class="text-blue-700 lg:text-xl text-lg font-bold">
						{{ about.body }}
					</p>
				</div>
				<div class="pb-8 px-4 mx-auto max-w-screen-xl" data-anijs="if: scroll, on: window, do: zoomIn animated, before: $scrollReveal">
					<div class="relative mx-auto border-gray-800 bg-gray-800 border-[8px] rounded-t-xl h-[172px] max-w-[301px] md:h-[294px] md:max-w-[512px]">
						<div class="rounded-lg overflow-hidden h-[156px] md:h-[278px] bg-white">
							<img src="{{ about.bodyImage.one().url }}" class="h-[156px] md:h-[278px] w-full rounded-lg object-cover" alt="">
						</div>
					</div>
					<div class="relative mx-auto bg-gray-900 rounded-b-xl rounded-t-sm h-[17px] max-w-[351px] md:h-[21px] md:max-w-[597px]">
						<div class="absolute left-1/2 top-0 -translate-x-1/2 rounded-b-xl w-[56px] h-[5px] md:w-[96px] md:h-[8px] bg-gray-800"></div>
					</div>
				</div>
				<div class="pb-8 px-4 mx-auto max-w-screen-xl space-y-4">
					{{ about.bodyEditor | raw }}
				</div>
			</section>
		{% endif %}
		{% if about.type.handle == 'layoutJourney' %}
			<section class="bg-[#F8FAFC] mb-8">
				<div class="py-8 px-4 mx-auto max-w-screen-xl" data-anijs="if: scroll, on: window, do: bounceInDown animated, before: $scrollReveal">
					{{ about.title | raw }}
				</div>
				<div class="py-8 px-4 mx-auto max-w-screen-xl" data-anijs="if: scroll, on: window, do: zoomIn animated, before: $scrollReveal">
					<img src="{{ about.bodyImage.one().url }}" alt="journey" class="md:w-3/4 block mx-auto">
				</div>
			</section>
		{% endif %}
		{% if about.type.handle == 'layoutFacilities' %}
			<section class="bg-[#F8FAFC] mb-8">
				<div class="py-8 px-4 mx-auto max-w-screen-xl" data-anijs="if: scroll, on: window, do: bounceInDown animated, before: $scrollReveal">
					{{ about.title | raw }}
				</div>
				<div class="py-8 px-4 mx-auto max-w-screen-xl grid gap-8 md:grid-cols-2 grid-cols-1">
					<div data-anijs="if: scroll, on: window, do: bounceInLeft animated, before: $scrollReveal">
						<p class="font-medium text-xl">
							{{ about.body }}
						</p>
					</div>
					<img src="{{ about.bodyImage.one().url }}" alt="fasilitas" class="w-2/3 block mx-auto" data-anijs="if: scroll, on: window, do: bounceInRight animated, before: $scrollReveal">
				</div>
			</section>
		{% endif %}
		{% if about.type.handle == 'layoutGallery' %}
			{% set dataImage = about.imageGallery.all() | slice(1, 4) %}
			<section class="bg-[#F8FAFC] mb-8">
				{% if about.optionGallery.value == 'grid' %}
					<div class="py-8 px-4 mx-auto max-w-screen-xl items-stretch gap-8 grid md:grid-cols-2 grid-cols-1">
						<img src="{{ about.imageGallery.one().url }}" alt="1" data-anijs="if: scroll, on: window, do: bounceInLeft animated, before: $scrollReveal">
						<div class="gap-8 grid md:grid-cols-2 grid-cols-1" data-anijs="if: scroll, on: window, do: bounceInRight animated, before: $scrollReveal">
							{% for image in dataImage %}
								<img src="{{ image.url }}" alt="2">
							{% endfor %}
						</div>
					</div>
				{% endif %}

				{% if about.optionGallery.value == 'slider'  %}
					<div
						id="default-carousel" class="relative w-full py-8 px-4 mx-auto max-w-screen-xl" data-carousel="slide">
						<!-- Carousel wrapper -->
						<div class="relative h-56 overflow-hidden rounded-lg md:h-96">
							{% for image in about.imageGallery.all() %}
								<div class="hidden duration-700 ease-in-out" data-carousel-item>
									<img src="{{ image.url }}" class="absolute block w-full object-fill -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2" alt="...">
								</div>
							{% endfor %}
						</div>
						<!-- Slider indicators -->
						<div class="absolute z-30 flex -translate-x-1/2 bottom-5 left-1/2 space-x-3 rtl:space-x-reverse">
							<button type="button" class="w-3 h-3 rounded-full" aria-current="true" aria-label="Slide 1" data-carousel-slide-to="0"></button>
							<button type="button" class="w-3 h-3 rounded-full" aria-current="false" aria-label="Slide 2" data-carousel-slide-to="1"></button>
							<button type="button" class="w-3 h-3 rounded-full" aria-current="false" aria-label="Slide 3" data-carousel-slide-to="2"></button>
							<button type="button" class="w-3 h-3 rounded-full" aria-current="false" aria-label="Slide 4" data-carousel-slide-to="3"></button>
							<button type="button" class="w-3 h-3 rounded-full" aria-current="false" aria-label="Slide 5" data-carousel-slide-to="4"></button>
						</div>
						<!-- Slider controls -->
						<button type="button" class="absolute top-0 start-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" data-carousel-prev>
							<span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none">
								<svg class="w-4 h-4 text-white dark:text-gray-800 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 6 10">
									<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 1 1 5l4 4"/>
								</svg>
								<span class="sr-only">Previous</span>
							</span>
						</button>
						<button type="button" class="absolute top-0 end-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" data-carousel-next>
							<span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none">
								<svg class="w-4 h-4 text-white dark:text-gray-800 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 6 10">
									<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
								</svg>
								<span class="sr-only">Next</span>
							</span>
						</button>
					</div>
				{% endif %}
			</section>
		{% endif %}
		{% if about.type.handle == 'layoutManagement' %}
			{% set users = craft.entries().section('people').all() %}
			<section class="bg-[#F8FAFC] mb-8">
				<div class="py-8 px-4 mx-auto max-w-screen-xl" data-anijs="if: scroll, on: window, do: bounceInDown animated, before: $scrollReveal">
					{{ about.title | raw }}
				</div>
				<div class="py-8 px-4 mx-auto max-w-screen-xl items-stretch gap-8 grid md:grid-cols-2 grid-cols-1">
					{% for user in users %}
						<div class="flex gap-4 items-center" data-anijs="if: scroll, on: window, do: bounceInUp animated, before: $scrollReveal">
							<img src="{{ user.peopleImage.one().url }}" alt="{{ user.peopleName }}" class="w-1/2">
							<div>
								<p class="font-semibold text-lg">{{ user.peopleName }}</p>
								<p class="font-normal text-base">{{ user.peopleStatus }}</p>
							</div>
						</div>
					{% endfor %}
				</div>
			</section>
		{% endif %}
	{% endfor %}
{% endblock %}
